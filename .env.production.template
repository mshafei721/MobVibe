# MobVibe Production Environment Variables
# Copy this file to .env and fill in your actual values
# ⚠️ NEVER commit .env to Git! It's in .gitignore

# ============================================
# Frontend (Mobile App) Variables
# These are bundled into the app build
# ============================================

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key...

# API Configuration
EXPO_PUBLIC_API_URL=https://mobvibe-api.fly.dev

# Monitoring (GlitchTip or Sentry)
EXPO_PUBLIC_SENTRY_DSN=https://...@app.glitchtip.com/123

# Environment
EXPO_PUBLIC_ENVIRONMENT=production

# ============================================
# Backend Variables (DO NOT bundle in app!)
# These go in Fly.io secrets
# ============================================

# Supabase Backend Key (SENSITIVE - NEVER expose to frontend!)
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key...

# Anthropic API (SENSITIVE)
ANTHROPIC_API_KEY=sk-ant-...your-api-key...

# Fly.io Configuration (SENSITIVE)
FLY_API_TOKEN=fo1_...your-token...
FLY_APP_NAME=mobvibe-api
FLY_REGION=sjc

# Worker Configuration
POLL_INTERVAL_MS=10000
MAX_CONCURRENT_JOBS=1
SHUTDOWN_TIMEOUT_MS=30000
MONITOR_INTERVAL_MS=30000

# Sandbox Configuration
SANDBOX_TIMEOUT_MS=1800000
SANDBOX_MEMORY_MB=512
SANDBOX_CPUS=1

# Storage
STORAGE_QUOTA_LIMIT_BYTES=104857600

# Health Check
HEALTH_CHECK_PORT=8080

# Logging
LOG_LEVEL=info
NODE_ENV=production
